@model IEnumerable<Tarea_1.Models.EntidadArticulo>

@{
    ViewData["Title"] = "Articulos";
}

<h1>Lista de articulos</h1>

<!--
<p>
    <a asp-action="Create">Agregar articulo</a>
</p>
-->
<body>
    <button onclick="location.href='http://localhost:5030/EntidadArticuloes/Create'">Agregar articulo</button>
</body>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>

            </tr>
        }
    </tbody>
</table>
